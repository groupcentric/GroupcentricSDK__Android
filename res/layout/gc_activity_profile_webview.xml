<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/header_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/gc_headerbg" >

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/gc_btn_back"
            android:contentDescription="@string/gc_back"  />
        
                <TextView
            android:id="@+id/txt_profile_header"
            style="@style/gc_Header_Bar_Text"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:lines="1"
            android:scrollHorizontally="true"
            android:text="@string/gc_profile" />

    </RelativeLayout>

        <WebView 
             android:id="@+id/webView_profile"
             android:layout_below="@+id/header_bar"
             android:layout_height="fill_parent"
             android:layout_width="fill_parent"
             ></WebView>
</RelativeLayout>