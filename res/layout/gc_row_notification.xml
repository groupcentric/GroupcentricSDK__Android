
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel_lyt_notification"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gc_list_item_notification_1_bg"
    android:orientation="horizontal" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel_lyt_content" 
    android:layout_height="wrap_content" 
    android:layout_width="fill_parent"   
    android:layout_toLeftOf="@+id/lytNotificationIndicator"
    >
    <ImageView
        android:id="@+id/imgNotificationPic"
        style="@style/gc_FriendList_Friend_pic" />

    <TextView
        android:id="@+id/txtNotificationTitle"
        style="@style/gc_Notification_List_Title_Text"
        android:layout_toLeftOf="@+id/lytNotificationIndicator"
        android:layout_toRightOf="@+id/imgNotificationPic" />

    <TextView
        android:id="@+id/txtNotificationMessage"
        style="@style/gc_Notification_List_Message_Text"
        android:layout_below="@+id/txtNotificationTitle"
        android:layout_toLeftOf="@+id/lytNotificationIndicator"
        android:layout_toRightOf="@+id/imgNotificationPic" />

    <TextView
        android:id="@+id/txtNotificationDate"
        style="@style/gc_Notification_List_Date_Text"
        android:layout_below="@+id/txtNotificationMessage"
        android:layout_toLeftOf="@+id/lytNotificationIndicator"
        android:layout_toRightOf="@+id/imgNotificationPic" />

    <RelativeLayout
        android:id="@+id/lytNotificationDiv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gc_notificationsrowdivider" >
    </RelativeLayout>
        <RelativeLayout
        android:id="@+id/lytNotificationIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/gc_newmsgbar"
        android:layout_centerVertical="true"

        />


</RelativeLayout>


</RelativeLayout>