<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        >
        <TextView
	                    android:id="@+id/txtNoGroupsMessage"
	                    android:gravity="center_horizontal"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_alignParentRight="true"
	                    android:layout_marginLeft="10dp"
	                    android:layout_marginRight="10dp"
	                    android:layout_marginTop="15dp"
	                    android:text="You don't have any groups..."
	                    android:textColor="@color/gc_pink"
	                    android:textSize="20sp"
	                    android:visibility="gone"
	                     />
    
    <ImageButton
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:layout_below="@+id/txtNoGroupsMessage"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/imgStartGroup"
                        android:src="@drawable/gc_btn_start_group"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="40px"
                        android:layout_marginBottom="20px"
                        />
    <TextView
        android:id="@+id/txtGCProfile"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:layout_marginBottom="40px"
        android:text="My Groupcentric Profile"
        android:layout_below="@+id/imgStartGroup"
        android:textColor="@color/gc_font_gray"
        ></TextView>
    
    
</LinearLayout>