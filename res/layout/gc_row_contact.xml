<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lyt_contact_row"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gc_contactrow" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/layout_item__image"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item__text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="@color/gc_font_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item__text2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:ellipsize="marquee"
            android:maxLines="2"
            android:singleLine="false"
            android:visibility="gone" />
    </LinearLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_item__image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
 >

        <ImageView
            android:id="@+id/item__image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:focusable="false"
            android:scaleType="fitXY" />
    </RelativeLayout>

    <CheckBox
        android:id="@+id/item__checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="7dp"
        android:focusable="false"
        android:visibility="gone" />

</RelativeLayout>