<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gc_notificationsbg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/header_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/gc_headerbg" >

        <TextView
            android:id="@+id/txt_group_title"
            style="@style/gc_Header_Notification_Bar_Text"
            android:ellipsize="end"
            android:lines="1"
            android:scrollHorizontally="true"
            android:text="@string/gc_notifications"
            android:layout_marginLeft="5dp" />"

        <ImageButton
            android:id="@+id/btn_x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/gc_btn_x"
/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lyt_colorline"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_bar"
        android:background="@drawable/gc_notificationscolorline" >
    </RelativeLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/chat_footer"
        android:layout_below="@+id/lyt_colorline"
        android:cacheColorHint="#00000000"
        android:divider="#00000000"
        android:isScrollContainer="false" >
    </ListView>

</RelativeLayout>

